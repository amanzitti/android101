<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ExampleActivity$PlaceholderFragment">
    <TextView android:id="@+id/text1" android:text="1" style="@style/ExampleText"
        android:layout_alignParentRight="true"/>
    <TextView android:id="@+id/text2" android:text="2" style="@style/ExampleText"
        android:layout_alignParentBottom="true"/>
    <TextView android:id="@+id/text3" android:text="3" style="@style/ExampleText"
        android:layout_above="@id/text2"/>
    <TextView android:id="@+id/text4" android:text="4" style="@style/ExampleText"
        android:layout_toLeftOf="@id/text1" android:layout_below="@id/text1"/>
    <TextView android:id="@+id/text5" android:text="5" style="@style/ExampleText"
        android:layout_toLeftOf="@id/text4" android:layout_below="@id/text4"/>
    <TextView android:id="@+id/text6" android:text="6" style="@style/ExampleText" />
</RelativeLayout>
